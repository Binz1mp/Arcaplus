{
  "name": "Arcaplus",
  "description": "아카라이브의 사용감을 개선해줍니다.",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "exclude_matches": [ "https://arca.live/b/?*" ],
      "matches": [ "https://arca.live/b/*" ],
      "js": [
        "script_lib/jquery-3.6.1.min.js",
        "script_main/content-script.js"
      ],
      "css": [
        "css_main/css-inject.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "/images/logo.png",
    "32": "/images/logo.png",
    "48": "/images/logo.png",
    "128": "/images/logo.png"
  }
}
